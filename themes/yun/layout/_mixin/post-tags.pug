for tag in post.tags.data
  - var tagColor = "var(--hty-text-color)"
  if tag.name in theme.tags
    - tagColor = theme.tags[tag.name]
  a.tag-item(href=url_for(tag.path, rel='tag'), style= tagColor ? `background:white;border-radius: 5px;margin: 0 3px;--text-color:${tagColor}`:'')
    - tagColor = null
    span.post-meta-item-icon
      +icon('icon-icon-edit')
    span.tag-name!=tag.name
